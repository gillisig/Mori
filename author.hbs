{{!< default}}

{{#author}}
  <div class="post-author">
    {{#if image}}
      <a href="{{url}}"><img class="post-author-image large" src="{{image}}"  alt="Author image"></a>
    {{/if}}
    <a class="w-inline-block post-author-name" href="{{url}}"><h1>{{name}}</h1></a>
    <div class="post-author-bio">
      {{bio}}
      <div class="author-meta">
        <div class="post-author-meta">Written {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}} {{#if location}}from {{location}}{{/if}}{{#if website}}, visit at <a href="{{website}}">{{website}}</a>{{/if}}</div>
      </div>
    </div>
  </div>
{{/author}}

<main class="main-content" id="main-content" role="main">
  {{! The tag below includes the post loop - partials/loop.hbs }}
  {{> "loop"}}
</main>
